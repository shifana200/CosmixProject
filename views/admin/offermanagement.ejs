            <li>Order Management</li>
            <li>Category Management</li>
            <li>Coupon Management</li>
            <li>Offers Management</li>
        </ul>
    </div> -->

    <!-- Main Section -->
    <div class="main">
      <%- include("../../views/partials/admin/header.ejs")%>

        <!-- Header -->
        <!-- <div class="header">Products Management</div> -->

        <!-- Table and Form Content -->
        <div class="content">
            <!-- Table -->
            

            <!-- Form -->
            <div class="form-container">
                <h3>Add Offers</h3>
                <input type="text" placeholder="product id">
                <input type="text" placeholder="discount">
                <input type="text" placeholder="original price">
                <input type="date" class="form-control" id="endTime" placeholder="expiry">
                <input type="text" placeholder="category applicable">

                <input type="text" placeholder="discount price">
                

                <button class="create-btn">Create</button>
            </div>
        </div>
    </div>
</body>
</html>
