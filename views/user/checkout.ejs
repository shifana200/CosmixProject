document.getElementById('updateAddressButton').addEventListener('click', async () => {
  // Get the selected address ID from the radio button
  const selectedAddressId = document.querySelector('input[name="address"]:checked')?.value;

  if (!selectedAddressId) {
    alert('Please select an address.');
    return;
  }

  try {
    // Send the selected address ID to the backend
    const response = await fetch('/update-address', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ addressId: selectedAddressId }),
    });

    const result = await response.json();

    if (response.ok && result.success) {
      const address = result.address; // The updated address object from the backend

      // Update the UI to show the selected address
      const addressDiv = document.getElementById('addressDiv');

      addressDiv.innerHTML = `
        <div style="padding: 20px;">
          <h6>${address.addressType}</h6>
          <strong>${address.name}</strong>
          <p>Phone: ${address.phone}</p>
          <p>${address.city}, ${address.landMark}, <br/>
             ${address.district}, ${address.state} - ${address.pincode}</p>
        </div>
      `;

      alert(result.message);
    } else {
      alert(result.message || 'Failed to update the address.');
    }
  } catch (error) {
    console.error('Error updating address:', error);
    alert('Something went wrong. Please try again later.');
  }
});



