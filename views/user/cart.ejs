	<script>

document.querySelector('.quantity-left-minus').addEventListener('click', function () {
    const quantity = document.getElementById('quantity');
    const totalPriceElement = document.getElementById('totalPrice');
    
    // Fetch the price dynamically from the price span
    const priceElement = document.getElementById('price');
    const price = parseFloat(priceElement.textContent.trim()); // Get and parse the price
    
    let value = parseInt(quantity.value); // Parse the quantity value
    
    if (value > 1) {
        quantity.value = value - 1; // Decrease the value
    }
    
    const updatedValue = parseInt(quantity.value); // Get the updated quantity value
    const totalPrice = updatedValue * price; // Calculate the total price

    totalPriceElement.textContent = totalPrice.toFixed(2); // Display the total price with two decimals
});




document.querySelector('.quantity-right-plus').addEventListener('click', function () {
    const quantity = document.getElementById('quantity');
    const totalPriceElement = document.getElementById('totalPrice');
    
    // Fetch the price dynamically from the price span
    const priceElement = document.getElementById('price');
    const price = parseFloat(priceElement.textContent.trim()); // Get and parse the price
    
    let value = parseInt(quantity.value); // Parse the quantity value
    
    if (value >= 1) {
        quantity.value = value + 1; // Decrease the value
    }
    
    const updatedValue = parseInt(quantity.value); // Get the updated quantity value
    const totalPrice = updatedValue * price; // Calculate the total price

    totalPriceElement.textContent = totalPrice.toFixed(2); // Display the total price with two decimals
});


	</script>
	
