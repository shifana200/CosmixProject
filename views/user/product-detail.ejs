/* Transparent Overlay for Blocked Product */
.overlay-blocked {
  position: absolute; /* Position it over the whole page */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black */
  display: flex;
  justify-content: center; /* Center the message horizontally */
