/* Carousel Container */
.owl-carousel {
    position: relative;
    width: 100%;
    margin: 0 auto;
    background-color: #ffffff; /* Optional: Add a background color */
    border-radius: 10px; /* Optional: Rounded edges */
    padding: 20px; /* Optional: Padding inside the carousel */
}

/* Hide Navigation Buttons */
.owl-prev, .owl-next {
    display: none; /* Completely remove the arrows */
}

/* Dots Container */
.owl-dots {
    text-align: center;
    margin-top: 15px;
}

/* Individual Dots */
.owl-dot {
    display: inline-block;
    width: 15px;
    height: 15px;
    margin: 5px;
    background-color: #ddd; /* Default dot color */
    border-radius: 50%; /* Circular dots */
    cursor: pointer;
    border: 1px solid #bbb; /* Optional: Add a border for better visibility */
    transition: background-color 0.3s, transform 0.2s; /* Smooth transition */
}

.owl-dot:hover {
    background-color: #ccc; /* Slightly darker on hover */
    transform: scale(1.2); /* Slightly enlarge on hover */
}

/* Active Dot */
.owl-dot.active {
    background-color: grey; /* Highlight active dot */
    border: 1px solid grey; /* Match the active border */
}

#heart-button{
	
